# Flush Directory Service cache
 flush() {
	dscacheutil="$(which dscacheutil)";
	if [[ -n "$dscacheutil" ]]; then
		dscacheutil -flushcache && killall -HUP mDNSResponder
	else
		sudo service nscd restart
	fi
 }

